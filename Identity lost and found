  script
    function toggleTranslation() {
      const en = document.getElementById('en');
      en.style.display = en.style.display === 'none'  'block'  'none';
    }
    function playMusic() {
      const bgm = document.getElementById('bgm');
      if (bgm.paused) {
        bgm.play();
      } else {
        bgm.pause();
      }
    }
  script

